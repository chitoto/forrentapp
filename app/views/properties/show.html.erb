<h1>物件詳細</h1>
<p id="notice"><%= notice %></p>
<div>
  <p>
    <strong>物件名:</strong>
    <%= @property.property_name %>
  </p>

  <p>
    <strong>賃料:</strong>
    <%= @property.rent %>
  </p>

  <p>
    <strong>住所:</strong>
    <%= @property.address %>
  </p>

  <p>
    <strong>築年数:</strong>
    <%= @property.age %>
  </p>

  <p>
    <strong>備考:</strong>
    <%= @property.remarks %>
  </p>
</div>
<br>
<hr>
<br>
<div>
  <% @stations.each_with_index do |nearest_station, n| %>
   <% if @property.stations.any? %>
    <h2>最寄り駅<%= n + 1 %></h2>
    <p>
      <strong>路線名:</strong>
      <%= nearest_station.route_name %>
    </p>
    <p>
      <strong>駅名:</strong>
      <%= nearest_station.station_name %>
    </p>
    <p>
      <strong>徒歩分数</strong>
      <%= nearest_station.minutes_on_foot %>
    </p>
    <% end %>
  <% end %>
</div>
<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
